<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bluegreen4"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewProfileType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Type"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/darkblue3"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/userProfileImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/user_profile"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background_round">

            <EditText
                android:id="@+id/eTxtProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColor="@color/darkblue3"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:enabled="false"
                android:focusable="false"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_profile_bg"/>

            <EditText
                android:id="@+id/eTxtProfileFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:textColor="@color/darkblue3"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:enabled="false"
                android:focusable="false"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_profile_bg"/>

            <EditText
                android:id="@+id/eTxtProfileLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:textColor="@color/darkblue3"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:enabled="false"
                android:focusable="false"
                android:inputType="textPersonName"
                android:background="@drawable/edit_text_profile_bg"/>

            <EditText
                android:id="@+id/eTxtProfilePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textColor="@color/darkblue3"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:enabled="false"
                android:focusable="false"
                android:inputType="number"
                android:background="@drawable/edit_text_profile_bg"/>

            <EditText
                android:id="@+id/eTxtProfileAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:textColor="@color/darkblue3"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="20sp"
                android:enabled="false"
                android:focusable="false"
                android:inputType="numberDecimal"
                android:background="@drawable/edit_text_profile_bg"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="55dp"
                android:gravity="center_vertical"
                android:backgroundTint="@color/bluegreen4"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/darkblue3"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>